<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include head %>
</head>
<body class="container">

    <header>
        <% include header %>
    </header>

    <main>
        <div class="jumbotron">
            <!-- <h1>This is great</h1> -->
            <!-- <p><%= token %></p> -->
            <!-- <p>Welcome to templating using EJS</p> -->
            <div class="col-lg-6 col-lg-offset-3">
            <form class="form-action" id="forgot_form" action="http://localhost:8082/updatePassword" method="post">
              <div class="form-group">
                <input type="hidden" name="token" id="token" value="<%= token %>" />
                <input type="password" class="form-control" required name="password" id="password" />
              </div>
              <div class="form-group">
                <input type="password" class="form-control" required name="cpassword" id="cpassword" />
              </div>
              <div class="form-group">
                <button class="form-control btn btn-info" type="submit">Submit</button>
                </div>
            </form>
            </div>

        </div>
    </main>

    <footer>
        <% include footer %>
    </footer>

</body>
</html>
<style>
.jumbotron{
  display: inline-block;
  width: 100%;
}
</style>
